{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",  // The output will be placed in the `server/dist` folder
    "rootDir": "./src",
    "baseUrl": "./src"
  },
  "include": ["src/**/*.ts", "src/mikro-orm.config.ts", "src/migrations/**/*.ts"],
  "exclude": ["node_modules"]
}
